div.tagsinput { border:1px solid #CCC; background: #FFF; padding:5px; width:300px; height:100px; overflow-y: hidden; overflow-x:hidden;}
div.tagsinput span.tag { display: block; float: left; padding: 5px; text-decoration:none; background: #7db4dd; color: #367ba8; margin-right: 5px; 
margin-bottom:5px;font-family: helvetica;  font-size:13px; font-weight: bold;
filter:  progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#7db4dd', endColorstr='#ffffff'); /* IE6 & IE7 */
background-image: linear-gradient(top, #7db4dd 0%, #d3e5f1 50%, #d3e5f1 20%);
background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #7db4dd), color-stop(0.5, #d3e5f1), color-stop(1, #d3e5f1));
background-image: -moz-linear-gradient(top, #7db4dd 0%, #d3e5f1 50%, #d3e5f1 20%);
background-image: -o-linear-gradient(top, #7db4dd 0%, #d3e5f1 50%, #d3e5f1 20%);
background-image: -ms-linear-gradient(top, #7db4dd 0%, #d3e5f1 50%, #d3e5f1 20%);
border: 1px solid #7db4dd; -moz-border-radius:10px; -webkit-border-radius:10px; border-radius:10px;
}
div.tagsinput span.tag a { font-weight: bold; color: #4d6185; text-decoration:none; font-size: 11px;  } 
div.tagsinput input { width:80px; margin:0px; font-family: helvetica; font-size: 13px; border:1px solid transparent; padding:5px; background: transparent; color: #000; outline:0px;  margin-right:5px; margin-bottom:5px; }
div.tagsinput div { display:block; float: left; } 
.tags_clear { clear: both; width: 100%; height: 0px; }
.not_valid {background: #FBD8DB !important; color: #90111A !important;}