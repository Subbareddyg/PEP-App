	<bean id="hibernate3AnnotatedSessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.default_schema">VENDORPORTAL</prop>
				<prop key="show_sql">true</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.belk.pep.domain.Config</value>
				<value>com.belk.pep.domain.PetAttribute</value>
				<value>com.belk.pep.domain.PepRole</value>
				<value>com.belk.pep.domain.BelkUser</value>
				<value>com.belk.pep.domain.ExternalUserPK</value>
				<value>com.belk.pep.domain.ExternalUser</value>
				<value>com.belk.pep.domain.PepDepartmentPK</value>
				<value>com.belk.pep.domain.PepDepartment</value>
			</list>
		</property>
	</bean>
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="belksmtp" />
		<property name="port" value="25" />
		<property name="username" value="AFUSYG6" />
		<property name="password" value="Samarth-16" />
		<property name="javaMailProperties">
			<props>
				<prop key="mail.transport.protocol">smtp</prop>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
			</props>
		</property>
	</bean>

	<bean id="attributeMaintenanceController" class="com.belk.pep.controller.AttributeMaintenanceController">
		<property name="attributeMaintenanceDelegate" ref="attributeMaintenanceDelegate" />
	</bean>

	 <bean id="attributeMaintenanceDelegate" class="com.belk.pep.delegate.AttributeMaintenanceDelegate">
		<property name="attributeMaintenanceService" ref="attributeMaintenanceService" />
	</bean>

	<bean id="attributeMaintenanceService" class="com.belk.pep.service.impl.AttributeMaintenanceServiceImpl">
		<property name="attributeMaintenanceDAO" ref="attributeMaintenanceDAO"></property>
	</bean>

	<bean id="attributeMaintenanceDAO" class="com.belk.pep.dao.impl.AttributeMaintenanceDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
		
	</bean>
	



</beans>
